[module/arch]
type = custom/script
exec = "echo ' ÔåÉ'"
label-foreground = ${colors.green}
click-left = launcher
#click-right = notify-send "Select Window to close" & sh -c xkill
click-right = launcher --window

#---------------------------------------------------

[module/power]
type = custom/script
exec = "echo 'ÔÄë '"
label-foreground = ${colors.green}
click-left = launcher --system
click-right = launcher --power

#---------------------------------------------------

[module/time]
type = internal/date

date = "%H:%M"
date-alt = "%a %d %b"

format = "<label>"
label = "%date%"

#format-prefix = "Ôôè  "
format-foreground = ${colors.blue}
label-foreground = ${colors.foreground}

#---------------------------------------------------

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = false
interval = 5
format-volume = <label-volume>
format-volume-prefix = "Ô©Ω "
format-muted-prefix = "Ô™Ä "

format-volume-foreground = ${colors.blue}
format-muted-foreground = ${colors.red}

label-volume-foreground = ${colors.foreground}
label-muted-foreground = ${colors.red}

#---------------------------------------------------

[module/pulseaudio-bar]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = "ÔßÇ "
label-volume-foreground = ${colors.blue}

format-muted-prefix = "ÔßÇ "
format-muted-foreground = ${colors.foreground}
format-muted-prefix-foreground = ${colors.darkred}
label-muted = "                "
bar-volume-width = 10
bar-volume-foreground-0 = ${colors.blue}
bar-volume-gradient = true
bar-volume-indicator = -
bar-volume-indicator-foreground = ${colors.blue}

bar-volume-0 = Ô©æ
bar-volume-1 = Ô©ø
bar-volume-2 = Ô©Ω

bar-volume-fill = -
bar-volume-empty = -
bar-volume-empty-foreground = ${colors.black}

#---------------------------------------------------

[module/mpd]
type = internal/mpd

format-online = "<label-song>"
label-offline = ""
#label-song = %title%
label-song = "MPD"
format-online-prefix = "Ô±ò "
label-song-maxlen = 24
format-online-foreground = ${colors.blue}
label-song-foreground = ${colors.gray}

#---------------------------------------------------

[module/network-wireless]
type = internal/network
#interface = wlp8s0
interface = ${env:ECOS_WIRELESS_INTERFACE:}

interval = 3.0

udspeed-minwidth = 5

accumulate-stats = true

unknown-as-up = true

format-connected = <label-connected> <ramp-signal>

format-disconnected = <label-disconnected>
format-packetloss = <animation-packetloss> <label-connected>
label-connected = "Ô™®"
label-connected-foreground = ${colors.blue}

label-disconnected-foreground = #ef7458

ramp-signal-0 = 10%
ramp-signal-1 = 20%
ramp-signal-2 = 50%
ramp-signal-3 = 70%
ramp-signal-4 = 90%
ramp-signal-5 = 100%


animation-packetloss-0 = ‚ö†
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = üì∂
animation-packetloss-1-foreground = #000000
animation-packetloss-framerate = 500

#---------------------------------------------------

[module/network-wired]
type = internal/network
interface = enp2s0
interval = 3.0
unknown-as-up = true
accumulate-stats = true

format-connected = <label-connected>
label-connected = ""
format-connected-foreground = ${colors.blue}
label-connected-foreground = ${colors.foreground}

format-packetloss = <animation-packetloss> <label-connected>

format-disconnected = <label-disconnected>
label-disconnected = "ÔúÅ"
format-disconnected-foreground = ${colors.blue}
label-disconnected-foreground = #ef7458

#---------------------------------------------------

[module/updates]
type = custom/script
exec = ~/.local/bin/status/updates
interval = 18000

label = %output%
format-prefix = "Ô∞¨ "

format-foreground = ${colors.blue}
label-foreground = ${colors.foreground}

#---------------------------------------------------

[module/email-posteo]
type = custom/script
exec = ~/.local/bin/status/email-posteo
interval = 60

label = %output%
format-prefix = "Ôõ≠ "

format-foreground = ${colors.blue}
label-foreground = ${colors.foreground}

#---------------------------------------------------

[module/weather]
type = custom/script
exec = ~/.local/bin/status/weather
exec-if = ping openweathermap.org -c 1
interval = 600
label = %output%

format-prefix = "Ô®é "

format-foreground = ${colors.blue}
label-foreground = ${colors.foreground}

#---------------------------------------------------

[module/battery]
type = internal/battery

full-at = 99

# ls -1 /sys/class/power_supply/

battery = ${env:ECOS_BATTERY_INTERFACE:}
adapter = ${env:ECOS_BATTERY_ADAPTER:}

format-charging-foreground = ${colors.blue}
label-charging-foreground = ${colors.foreground}

format-discharging-foreground = ${colors.blue}
label-discharging-foreground = ${colors.foreground}

format-full-foreground = ${colors.blue}
label-full-foreground = ${colors.foreground}
poll-interval = 5

time-format = %H:%M
format-charging = <animation-charging> <label-charging>

format-discharging = <ramp-capacity> <label-discharging>
format-full = <ramp-capacity> <label-full>

label-charging = %percentage%%
label-discharging = %percentage%%

label-full = %percentage%%

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ

bar-capacity-width = 10

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-framerate = 750

animation-discharging-0 = ÔâÄ
animation-discharging-1 = ÔâÅ
animation-discharging-2 = ÔâÇ
animation-discharging-3 = ÔâÉ
animation-discharging-4 = ÔâÑ
