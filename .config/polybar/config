# BARS
#\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\\

[bar/mainbar]

locale =de_DE.UTF-8
monitor = ${env:MONITOR:}
width = 99.1%
height = 28
offset-x = 8
offset-y = 8
;radius = 6.0
fixed-center = true
;enable-ipc = true
bottom = false
wm-restack = bspwm
;override-redirect = true
;separator = "|"

# Padding
padding = 0
padding-left = 2
padding-right = 2

# Colors
background = ${colors.background}
foreground = ${colors.foreground}

# Fonts
# fc-list | grep "Fira"
# fc-match "Fira Code:style=Bold:pixelsize=12"

# ttf-fira-code
font-0 = "Fira Code:size=10;2"

# ttf-nerd-fonts-symbols
font-1 = "Symbols Nerd Font:size=10;2"

# Lines
line-size = 4
line-color = ${colors.blue}

# Borders
border-size = 0
border-color = ${colors.background}

# Modules
modules-left = arch bspwm
modules-center = time
modules-right =  mpd weather email-posteo updates network-wireless network-wired battery pulseaudio power

module-margin-left = 2
module-margin-right = 2

# System Tray
#tray-position = right
tray-position = disabled
tray-padding = 4
tray-maxsize = 12
;tray-background = ${colors.background}
;tray-offset-x = 335
tray-offset-y = 0
tray-detached = false


